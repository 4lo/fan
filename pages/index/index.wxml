<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__hd" style='height:400rpx'>
        <view class="page__title">Fan</view>
        <image class="weui-vcode-img" src="../../images/logo.png" mode="aspectFit" style="height: 300rpx;"></image>
    </view>
    <view class="weui-cell__ft">
        
    </view>
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>
        <form bindsubmit='login'>
          <view class="weui-cells__title">登录</view>
          <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">邮箱</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="email" class="weui-input" placeholder="请输入邮箱"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">密码</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="password" class="weui-input"password="true" placeholder="请输入密码" />
                </view>
            </view>
          </view>
          <view class="weui-btn-area">
            <button class="weui-btn" type="primary" form-type='submit'>登录</button>
          </view>
        </form>
        
    </view>
</view>